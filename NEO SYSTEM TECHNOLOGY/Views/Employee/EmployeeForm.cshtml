@model NEO_SYSTEM_TECHNOLOGY.ViewModels.PersonOrganizationVM
@using NEO_SYSTEM_TECHNOLOGY.Entity.Enum

@* @{
    ViewBag.Title = @Model.Title;

} *@


<h2 style="margin: 20px;">@Model.Title</h2>

@using (Html.BeginForm("Save", "Employee", FormMethod.Post, new { style = "margin: 20px;" }))
{

    <div class="form-group">
        <h2 style="margin: 20px;">@Model.OrganizationName</h2>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.CustFirstName)
        @Html.TextBoxFor(p => p.CustFirstName, new { @class = "form-control text-box js-box", style = "width:500px; height:29px" })
        @Html.ValidationMessageFor(p => p.CustFirstName)

    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.CustLastName)
        @Html.TextBoxFor(p => p.CustLastName, new { @class = "form-control text-box js-box", style = "width:500px; height:29px" })
        @Html.ValidationMessageFor(p => p.CustLastName)

    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.CustPhoneNumber)
        @Html.TextBoxFor(p => p.CustPhoneNumber, new { @class = "form-control text-box", style = "width:500px; height:29px" })
        @Html.ValidationMessageFor(p => p.CustPhoneNumber)

    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.CustEmail)
        @Html.TextBoxFor(p => p.CustEmail, new { @class = "form-control text-box", style = "width:500px; height:29px" })
        @Html.ValidationMessageFor(p => p.CustEmail)

    </div>

    @Html.HiddenFor(p => p.OrganizationID)
    @Html.HiddenFor(p => p.PersonID)
    @Html.HiddenFor(p => p.OrganizationName)

    <button type="submit" class="btn btn-default btn-outline-primary" style="margin: 10px 0px; width:200px;">Сохранить</button>

    @if (Model.PersonID != 0)
    {
        @Html.ActionLink("Удалить", "Delete", "Employee", new { employeeID = Model.PersonID }, new { @class = "btn btn-default btn-outline-primary", style = "margin: 10px 0px; width:200px;" })
    }
}


@model NEO_SYSTEM_TECHNOLOGY.ViewModels.OrganizationContractVM
@using NEO_SYSTEM_TECHNOLOGY.Entity.Enum

<h2>Add New Contract</h2>

@using (Html.BeginForm("Save", "Contract", FormMethod.Post, new { style = "margin: 20px;" }))
{
    <div class="form-group">

        <h2>@Model.Organization.Name</h2>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Contract.OrderNumber)
        @Html.TextBoxFor(p => p.Contract.OrderNumber, new {@class="form-control text-box js-box", style="width:500px; height:29px"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Contract.ContractSum)
        @Html.TextBoxFor(p => p.Contract.ContractSum, new {@class="form-control text-box js-box", style="width:500px; height:29px"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Contract.StartDate)
        @Html.TextBoxFor(p => p.Contract.StartDate, new {@class="form-control text-box", style="width:500px; height:29px"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Contract.EndDate)
        @Html.TextBoxFor(p => p.Contract.EndDate, new {@class="form-control text-box", style="width:500px; height:29px"})
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Contract.Currency)
        @Html.DropDownList("Currency", Html.GetEnumSelectList<Currency>(),"Select Curency",new {@class="form-control text-box", style="width:500px; height:35px"})
    </div>

    @Html.HiddenFor(p => p.Organization.ID)

    <button type="submit" class="btn btn-primary">Save</button>
}

@{
}
<style>
    .bg-blue {
        background-color: aliceblue;
        padding: 25px;
    }

    .classname {
        display: block;
        width: 150px;
        height: 150px;
        text-indent: -9999px; /* hides the link text */
    }
</style>

<div class="bg-blue">

    <h2>@Model.OrganizationName</h2>

    <ol>
        @foreach (var person in Model.People)
        {
            <li style="padding: 5px">
                <b>@person.FirstName @person.LastName</b>
                <br>
                <b>Номер Телефона:</b> @person.PhoneNumber
                <br>
                <b>Почта:</b> @person.Email
            </li>
        }
    </ol>
</div>
<div style="padding: 25px">
    @Html.ActionLink("Разовой Договор", "AddNewDogovor", "Dogovor", new {id = Model.OrganizationID}, new { @class = "btn btn-default btn-outline-primary"})
    @Html.ActionLink("Рамочный Договор", "AddNewDogovor", "Dogovor", new {id = Model.OrganizationID}, new { @class = "btn btn-default btn-outline-primary"})
</div>
